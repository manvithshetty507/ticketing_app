{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",          // output CommonJS
    "target": "ES2019",             // still modern
    "esModuleInterop": true,        // allow default imports from CJS
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}
